<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mark.cyberpunkplayer.ui.widget.DMarkToolbar
        android:id="@+id/bt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bt_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_toolbar"/>

    <LinearLayout
        android:id="@+id/bt_float_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20">

        <ImageView
            android:id="@+id/bt_float_button"
            android:layout_width="@dimen/dp_60"
            android:src="@drawable/ic_reflash"
            android:layout_height="@dimen/dp_60" />
    </LinearLayout>

</RelativeLayout>
