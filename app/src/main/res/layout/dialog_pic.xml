<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/dialog_pic_image"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_480"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:transitionName="item_pic"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/dialog_pic_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10">


        <Button
            android:id="@+id/dialog_pic_delete"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:background="@drawable/red_cir_bg"/>

        <Button
            android:id="@+id/dialog_pic_setbackgroup"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="背景"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/blue_cir_bg"
           />

        <Button
            android:id="@+id/dialog_pic_exit"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/gray_cir_bg"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
