<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/server_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mark.cyberpunkplayer.ui.widget.RoundImageView
            android:id="@+id/view_server_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_pc"
            android:layout_margin="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/view_server_icon">
            <TextView
                android:id="@+id/server_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/wifi_title"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/server_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:text="@string/wifi_server_status_no"
                android:layout_marginLeft="@dimen/dp_10"/>

            <Button
                android:id="@+id/server_button"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:text="运行"
                android:textSize="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/server_address"
        android:textSize="@dimen/sp_20"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dp_6"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/server_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dp_6"/>


</LinearLayout>
