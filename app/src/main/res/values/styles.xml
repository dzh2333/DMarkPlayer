<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mediumturquoise</item>
        <item name="colorPrimaryDark">@color/mediumturquoise</item>
        <item name="colorAccent">@color/mediumturquoise</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PlayerFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtomTheme" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/pink</item>
        <item name="colorControlHighlight">@color/indigo</item>
    </style>

</resources>
